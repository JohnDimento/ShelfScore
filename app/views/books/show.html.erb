<div class="container mt-4">
  <% if flash[:error] %>
    <div class="alert alert-danger">
      <%= flash[:error] %>
    </div>
  <% end %>

  <% if flash[:notice] %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-8">
      <h1><%= @book.title %></h1>
      <h3 class="text-muted">by <%= @book.author %></h3>

      <% if @book.description.present? %>
        <div class="mt-4">
          <h4>Description</h4>
          <p><%= @book.description %></p>
        </div>
      <% end %>

      <% if @book.published_year.present? %>
        <p class="text-muted">Published: <%= @book.published_year %></p>
      <% end %>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Quiz</h5>

          <% if @book.quizzes.any? %>
            <% quiz = @book.quizzes.first %>
            <% if quiz.questions.any? %>
              <p class="card-text">This book has <%= pluralize(quiz.questions.count, 'question') %>.</p>
              <%= link_to "Take Quiz", take_book_quiz_path(@book, quiz), class: "btn btn-primary" %>
            <% else %>
              <p class="text-danger">No questions available for this quiz.</p>
              <%= button_to "Generate Questions", book_quizzes_path(@book), method: :post, class: "btn btn-primary" %>
            <% end %>
          <% else %>
            <p class="card-text">No quiz available for this book yet.</p>
            <%= button_to "Generate Quiz", book_quizzes_path(@book), method: :post, class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
