<%# Main content %>
<div class="min-h-screen bg-white">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="mb-16 text-center">
      <h1 class="text-3xl font-bold text-slate-800">My Bookshelf</h1>
      <p class="mt-2 text-slate-600">Books you've mastered...</p>
    </div>

    <% if @books.any? %>
      <div class="space-y-32">
        <%# Create two rows of three placeholders each %>
        <% 2.times do |row| %>
          <div class="relative">
            <%# Books container %>
            <div class="flex justify-center items-start">
              <% 3.times do |slot| %>
                <div class="w-[152px] flex justify-center">
                  <% book = @books[row * 3 + slot] %>
                  <% if book %>
                    <%= render "books/bookshelf/book", book: book %>
                  <% else %>
                    <%# Empty placeholder %>
                    <div class="w-[120px] h-[180px] bg-slate-50 rounded shadow-sm border border-slate-200/50 overflow-hidden relative group">
                      <div class="absolute inset-0 flex items-center justify-center">
                        <svg class="w-8 h-8 text-slate-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                        </svg>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>

            <%# Shelf background - positioned below books %>
            <div class="absolute -bottom-8 left-0 right-0 mx-auto w-[90%]">
              <div class="h-3 bg-gradient-to-r from-slate-700/10 via-slate-700/20 to-slate-700/10 rounded-lg shadow-lg"></div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <%= render "books/bookshelf/empty_bookshelf" %>
    <% end %>
  </div>
</div>
