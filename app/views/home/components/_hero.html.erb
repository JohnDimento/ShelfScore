<div class="max-w-xl mx-auto mt-12 mb-24">
  <div class="text-center mb-8">
    <h1 class="text-3xl font-bold text-slate-800 mb-2">
      Test Your Literary Knowledge
    </h1>
  </div>

  <!-- Search Box -->
  <%= form_tag search_path, method: :get, class: "bg-white/80 backdrop-blur-sm rounded-xl border border-slate-200 p-6 shadow-sm" do %>
    <div class="space-y-4">
      <!-- Title Input -->
      <div>
        <label class="block text-sm font-medium mb-1 text-slate-700">Title</label>
        <%= text_field_tag :title, params[:title],
          class: "w-full px-3 py-2 rounded-lg border border-slate-200 focus:border-slate-400 focus:ring-0 text-slate-800 placeholder-slate-400 bg-white",
          placeholder: "Enter book title"
        %>
      </div>

      <!-- Author Input -->
      <div>
        <label class="block text-sm font-medium mb-1 text-slate-700">Author</label>
        <%= text_field_tag :author, params[:author],
          class: "w-full px-3 py-2 rounded-lg border border-slate-200 focus:border-slate-400 focus:ring-0 text-slate-800 placeholder-slate-400 bg-white",
          placeholder: "Enter author name"
        %>
      </div>

      <!-- Take Quiz Button -->
      <%= submit_tag "Search for Quizzes",
        class: "w-full bg-slate-800 text-white rounded-lg py-2 px-4 text-sm font-medium hover:bg-slate-700 transition-colors"
      %>
    </div>
  <% end %>
</div>
