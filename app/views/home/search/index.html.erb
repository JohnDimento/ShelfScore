<%# Search Results %>
<div class="min-h-screen bg-white">
  <div class="max-w-[1200px] mx-auto px-4 py-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold mb-2">Search Results</h1>
      <div class="flex items-center space-x-4">
        <% if @books.any? %>
          <p class="text-gray-600">Found <%= pluralize(@books.count, 'book') %></p>
        <% end %>
        <%= link_to "Back to Home", root_path, class: "text-blue-600 hover:text-blue-800" %>
      </div>
    </div>

    <div class="bg-white rounded-lg">
      <% if @books.any? %>
        <%= render "books/list/book_list", books: @books %>
      <% else %>
        <%= render "books/list/no_results" %>
      <% end %>
    </div>
  </div>
</div>
