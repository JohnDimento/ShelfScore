<div class="min-h-screen bg-gradient-to-br from-slate-100 via-white to-blue-50">
  <main class="px-6 py-12">
    <div class="max-w-4xl mx-auto">
      <div class="mb-8">
        <h1 class="text-2xl font-bold text-slate-800 mb-2">Search Results</h1>
        <p class="text-slate-600">
          <% if params[:title].present? || params[:author].present? %>
            Showing results for
            <% if params[:title].present? %>
              title "<%= params[:title] %>"
              <%= "and " if params[:author].present? %>
            <% end %>
            <% if params[:author].present? %>
              author "<%= params[:author] %>"
            <% end %>
          <% end %>
        </p>
      </div>

      <% if @books.any? %>
        <%= render "books/list", books: @books %>
      <% else %>
        <%= render "books/no_results" %>
      <% end %>
    </div>
  </main>
</div>
