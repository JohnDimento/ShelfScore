<header class="border-b border-slate-200/50 bg-white/50 backdrop-blur-sm">
  <nav class="mx-auto max-w-7xl px-4 py-4 flex items-center justify-between">
    <%= link_to root_path, class: "flex items-center gap-2" do %>
      <svg class="w-6 h-6 text-slate-800" fill="currentColor" viewBox="0 0 20 20">
        <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z"/>
      </svg>
      <span class="text-xl font-semibold text-slate-800">ShelfScore</span>
    <% end %>

    <div class="flex items-center gap-8">
      <%= link_to "Bookshelf", "#", class: "text-slate-600 hover:text-slate-900" %>
      <%= link_to "Explore", "#", class: "text-slate-600 hover:text-slate-900" %>
      <%= link_to "Leaderboard", "#", class: "text-slate-600 hover:text-slate-900" %>
    </div>

    <div class="flex items-center gap-4">
      <% if user_signed_in? %>
        <div class="relative" data-controller="dropdown">
          <button data-action="click->dropdown#toggle" class="flex items-center justify-center w-10 h-10 rounded-full bg-slate-100 hover:bg-slate-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-500">
            <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </button>
          <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5">
            <div class="px-2 py-2 flex items-center justify-between">
              <%= link_to "Profile", edit_user_registration_path, class: "px-4 py-2 text-sm text-slate-700 hover:bg-slate-100 rounded-md" %>
              <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "px-4 py-2 text-sm text-slate-700 hover:bg-slate-100 rounded-md" %>
            </div>
          </div>
        </div>
      <% else %>
        <%= link_to "Sign in", new_user_session_path, class: "text-slate-600 hover:text-slate-900" %>
        <%= link_to "Sign up", new_user_registration_path, class: "bg-slate-800 text-white px-4 py-2 rounded-lg hover:bg-slate-700" %>
      <% end %>
    </div>
  </nav>
</header>
